{{>layout/header}}
<link href="/css/app/index.css" rel="stylesheet">

<div class="content">
    <div class="topContent">
        <div class="container">
            <div class="row gy-4">
                <!-- 프로필박스 -->
                <div class="profileBox1 col-lg-6" >
                    <div class="profileBgColor">
                        {{#profiles}}
                        <div class="profileImgBox">
                            <div class="profileImgDiv" style="background-image: url('{{photoPath}}');" onclick="movePage('/admin');">
                            </div>
                        </div>
                        <div class="profileContentBox1">
                            <div class="profileMyName">{{name}}</div>
                            <div>{{content1}}</br>{{content2}}</div>
                        </div>
                        {{/profiles}}
                    </div>
                    <div class="profileContentBox2" id="contactListDiv">
                        <script id="contactList" type="text/x-handlebars-template">
                            {{#each contacts}}
                            <span><img src="{{logoHtml}}" alt="{{name}}"></span>
                            {{/each}}
                            <span><img src="/image/app/phone5.png" alt="P"></span>
                            <span><img src="/image/app/logo_email2.png" alt="M"></span>
                            <span><img src="/image/app/logo_instagram.png" alt="I"></span>
                            <span><img src="/image/app/logo_linkedIn2.png" alt="in"></span>
                            <span><img src="/image/app/logo_github.png" alt="Git"></span>
                        </script>
                    </div>
                </div>

                <div class="menuBoxAll col-lg-5">
                    <div class="menuBtnDiv">
                        <button type="button" class="menuBtn border" onclick="movePage('/resume');">
                            <img src="/image/app/resume1.png">
                            <span>이력서</span>
                            <span style="width: 32px;"></span>
                        </button>
                    </div>
                    <div class="menuBtnDiv">
                        <button type="button" class="menuBtn border" onclick="alert('준비중입니다.')">
                            <img src="/image/app/daily2.png">
                            <span>소개</span>
                            <span style="width: 32px;"> </span>
                        </button>
                    </div>
                    <div class="menuBtnDiv">
                        <button type="button"  class="menuBtn border" onclick="alert('준비중입니다.')">
                            <img src="/image/app/board2.png">
                            <span>게시판</span>
                            <span style="width: 32px;"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function movePage(url){
        location.href = url;
    }
    function getContactInfo(){
        var url = '/api/v1/contact/메인';
        wbGetJson(getContactSuccessFnc,getContactFailFnc,url,{});
    }
    function getContactSuccessFnc(res){
        var template = Handlebars.compile($("#contactList").html());
        var html = template({'contacts':res});
        $('#contactListDiv').append(html);
        debugger;
    }
    function getContactFailFnc(res){

    }
</script>

