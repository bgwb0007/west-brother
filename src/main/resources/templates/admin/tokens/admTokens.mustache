{{>layout/header}}
<link href="/css/app/admin.css" rel="stylesheet">


<div class="content">
    <h2>Tokens 전체보기</h2>
    <div class="backDiv">
        <button type="button" class="btn btn-primary" onclick="moveBack();">뒤로가기</button>
    </div>

    <div class="tableDiv container">
        <div class="row table-responsive">

            <table class="table table-hover caption-top">
                <caption>Contact_SelectAll</caption>

                <colgroup>
                    <col style="width:3%">
                    <col style="width:20%">
                    <col style="width:20%">
                    <col style="width:20%">
                    <col style="width:20%">
                    <col style="width:8%">
                </colgroup>

                <thead class="table-light">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">이름</th>
                    <th scope="col">url</th>
                    <th scope="col">유효기간</th>
                    <th scope="col">수정일</th>
                    <th scope="col">수정</th>
                </tr>
                </thead>
                <tbody>
                {{#tokenList}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{name}}</td>
                    <td>{{url}}</td>
                    <td>{{expirationPeriod}}</td>
                    <td>{{modifiedDate}}</td>
<!--                    <td><button type="button" class="btn btn-primary" onclick="go수정하기('{{id}}')">수정</button></td>-->
                    <td><button type="button" class="btn btn-primary">수정(준비중)</button></td>
                </tr>
                {{/tokenList}}

                </tbody>
                <tfoot>
                <th scope="row" colspan="3"></th>
                <td colspan="1">총 개수</td>
                <td colspan="1">{{tokensListSize}}</td>
                <td colspan="1"></td>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="footDiv"></div>
</div>

<script>
    function moveBack(){
        location.href = "/admin";
    }
    function go수정하기(id){
        location.href = "/admin/tokens-update/" + id;
    }
</script>


{{>layout/footer}}