{{>layout/header}}
<link href="/css/app/admin.css" rel="stylesheet">

<div class="content">
    <h2>Profiles 전체보기</h2>
    <div class="backDiv">
        <button type="button" class="btn btn-primary" onclick="moveBack();">메인</button>
    </div>

    <div class="tableDiv container">
        <div class="row table-responsive">

            <table class="table table-hover caption-top">
                <caption>Profiles_SelectAll</caption>

                <colgroup>
                    <col style="width:3%">
                    <col style="width:20%">
                    <col style="width:20%">
                    <col style="width:20%">
                    <col style="width:8%">
                </colgroup>

                <thead class="table-light">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">이름</th>
                    <th scope="col">위치</th>
                    <th scope="col">사진경로</th>
                    <th scope="col">수정</th>
                </tr>
                </thead>
                <tbody>
                {{#profiles}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{name}}</td>
                    <td>{{pageGubun}}</td>
                    <td>{{photoPath}}</td>
                    <td><button type="button" class="btn btn-primary" onclick="go수정하기('{{id}}')">수정</button></td>
                </tr>
                {{/profiles}}
                </tbody>
                <tfoot>
                <th scope="row" colspan="2"></th>
                <td colspan="1">총 개수</td>
                <td colspan="1">{{profilesSize}}</td>
                <td colspan="1"></td>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="footDiv"></div>
</div>

<script>
    function moveBack(){
        location.href = "/admin";
    }
    function go수정하기(id){
        location.href = "/admin/profiles/" + id;
    }

</script>



{{>layout/footer}}