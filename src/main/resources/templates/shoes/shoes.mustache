{{>layout/header}}

<div class="content">
    <form action="/shoes/new" method="post" enctype="multipart/form-data">
    <div class="formAll container">
        <div class="mb-3 row">
            <label for="itemName" class="col-sm-2 col-form-label">이름</label>
            <div class="col-sm-10">
                <input type="text" name="itemName" class="form-control" id="itemName">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="imageFiles" class="col-sm-2 col-form-label">이미지파일들</label>
            <div class="col-sm-10">
                <input type="file" name="imageFiles" multiple="multiple" class="form-control" id="imageFiles">
            </div>
        </div>

        <div class="row">
            <div class="col-9">
            </div>
            <div class="col-3">
                <input type="submit">
                <button type="button" class="btn btn-primary">저장하기</button>
            </div>
        </div>
    </div>
    </form>
</div>

<script>
    function movePage(url){
        location.href = url;
    }
</script>

{{>layout/footer}}