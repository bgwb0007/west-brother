<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

<div class="content">
    <form action="/api/v1/shoes" method="post" enctype="multipart/form-data">
    <div class="formAll container">
        <div class="mb-3 row">
            <label for="name" class="col-sm-2 col-form-label">이름</label>
            <div class="col-sm-10">
                <input type="text" name="name" class="form-control" id="name" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="productCode" class="col-sm-2 col-form-label">상품코드</label>
            <div class="col-sm-10">
                <input type="text" name="productCode" class="form-control" id="productCode" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="brand" class="col-sm-2 col-form-label">브랜드</label>
            <div class="col-sm-10">
                <input type="text" name="brand" class="form-control" id="brand" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="size" class="col-sm-2 col-form-label">사이즈(cm)</label>
            <div class="col-sm-10">
                <input type="text" name="size" class="form-control" id="size" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="content" class="col-sm-2 col-form-label">설명</label>
            <div class="col-sm-10">
                <input type="text" name="content" class="form-control" id="content">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="status" class="col-sm-2 col-form-label">현상태</label>
            <div class="col-sm-10">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="statusRadio1" value="사용중">
                    <label class="form-check-label" for="statusRadio1">사용중</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="statusRadio2" value="리셀">
                    <label class="form-check-label" for="statusRadio2">리셀</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="statusRadio3" value="보유중">
                    <label class="form-check-label" for="statusRadio3">보유중</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="statusRadio4" value="구매안함">
                    <label class="form-check-label" for="statusRadio4">구매안함</label>
                </div>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="purchaseDate" class="col-sm-2 col-form-label">구매일 yyyy-mm-dd</label>
            <div class="col-sm-10">
                <input type="text" name="purchaseDate" class="form-control" id="purchaseDate">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="buy" class="col-sm-2 col-form-label">구매처</label>
            <div class="col-sm-10">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="buy" id="buyRadio1" value="Draw">
                    <label class="form-check-label" for="buyRadio1">draw</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="buy" id="buyRadio2" value="리셀">
                    <label class="form-check-label" for="buyRadio2">리셀</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="buy" id="buyRadio3" value="공식홈페이지">
                    <label class="form-check-label" for="buyRadio3">공홈</label>
                </div>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="releasePrice" class="col-sm-2 col-form-label">발매가</label>
            <div class="col-sm-10">
                <input type="text" name="releasePrice" class="form-control" id="releasePrice">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="sellPrice" class="col-sm-2 col-form-label">판매가</label>
            <div class="col-sm-10">
                <input type="text" name="sellPrice" class="form-control" id="sellPrice">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="mainImage" class="col-sm-2 col-form-label">대표사진</label>
            <div class="col-sm-10">
                <input type="file" name="mainImage" class="form-control" id="mainImage">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="imageFiles" class="col-sm-2 col-form-label">이미지파일들</label>
            <div class="col-sm-10">
                <input type="file" name="imageFiles" multiple="multiple" class="form-control" id="imageFiles">
            </div>
        </div>

        <div class="row">
            <div class="col-9">
            </div>
            <div class="col-3">
                <input type="submit">
<!--                <button type="button" class="btn btn-primary">저장하기</button>-->
            </div>
        </div>
    </div>
    </form>
    <div id="summernote"></div>
</div>

<script>
    function movePage(url){
        location.href = url;
    }
    $('#summernote').summernote({
        placeholder: 'Hello Bootstrap 4',
        tabsize: 2,
        height: 100
    });
</script>

